<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece2f"
    tools:context=".PreguntadosFragment">

    <LinearLayout
        android:id="@+id/preguntados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/preguntaPreguntados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/pregunta"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/respuestaPreguntados1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#966919"
            android:text="@string/respuesta"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/respuestaPreguntados2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#966919"
            android:text="@string/respuesta"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/respuestaPreguntados3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#966919"
            android:text="@string/respuesta"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/respuestaPreguntados4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#966919"
            android:text="@string/respuesta"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/accionesPreguntados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pistaPreguntados"
                android:contentDescription="@null"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/pistapreguntados" />

            <Button
                android:id="@+id/anteriorPreguntados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/black"
                android:text="@string/atras"
                android:textColor="#9b9b9b" />

            <Button
                android:id="@+id/siguientePreguntados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@color/black"
                android:text="@string/siguiente"
                android:textColor="#9b9b9b" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/resultadoPartida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Has acertado 3/5 preguntas"
                android:gravity="center"/>
            <Button
                android:id="@+id/salirPartidaPreguntados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/salir"
                android:backgroundTint="@color/black"/>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>